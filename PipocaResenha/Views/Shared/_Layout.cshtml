<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Pipoca e Resenha</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/js/site.js"></script>    
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container col-lg-12">

            <a class="navbar-brand" href="/">Pipoca e Resenha</a>

            <div class="collapse navbar-collapse" id="navFilmes">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Filmes/All">Todos os filmes</a>
                    <li class="nav-item">
                        <a class="nav-link" href="/Filmes/EmBreve">Em breve</a>
                    </li>
                </ul>
            </div>   
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navFilmes" aria-controls="navFilmes" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="d-flex ms-auto">
                <ul class="navbar-nav flex-row">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Profile">Perfil</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Logout">Sair</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Register">Cadastrar</a></li>
                    }
                </ul>
            </div>



        </div>
    </nav>
    <div class="container mt-4">
        @RenderBody()
    </div>
    <footer class="bg-dark py-4 mt-5">
        <div class="container text-center">
            <small>© Pipoca e Resenha - contato: contato@pipocaresenha.local</small>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>