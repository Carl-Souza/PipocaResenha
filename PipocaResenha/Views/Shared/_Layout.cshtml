<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Pipoca e Resenha</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/js/site.js"></script>    
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">Pipoca e Resenha</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/Filmes/All">Todos os Filmes</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Filmes/EmBreve">Em Breve</a></li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Profile">Perfil</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Logout">Sair</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Register">Cadastrar</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        @RenderBody()
    </div>
    <footer class="bg-light py-4 mt-5">
        <div class="container text-center">
            <small>© Pipoca e Resenha - contato: contato@pipocaresenha.local</small>
        </div>
    </footer>
</body>
</html>