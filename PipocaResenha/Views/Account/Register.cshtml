@{
    ViewData["Titulo"] = "Crie sua conta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="card bg-dark border-secondary text-white shadow-lg" style="max-width: 450px; width: 100%;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <h2 class="fw-bold">Criar Conta</h2>
                <p class="text-white-50">Junte-se à comunidade Pipoca & Resenha.</p>
            </div>

            <form method="post" action="/Account/Register">
                <div class="mb-3">
                    <label class="form-label text-muted small">NOME COMPLETO</label>
                    <input name="name" class="form-control bg-black text-white border-secondary p-3" placeholder="Como você quer ser chamado?" required />
                </div>

                <div class="mb-3">
                    <label class="form-label text-muted small">E-MAIL</label>
                    <input type="email" name="email" class="form-control bg-black text-white border-secondary p-3" placeholder="seu@email.com" required />
                </div>

                <div class="mb-4">
                    <label class="form-label text-muted small">SENHA</label>
                    <input type="password" name="password" class="form-control bg-black text-white border-secondary p-3" placeholder="Crie uma senha forte" required />
                </div>

                <div class="d-grid gap-2">
                    <button class="btn btn-danger btn-lg fw-bold">CADASTRAR</button>
                </div>
            </form>

            <div class="text-center mt-4">
                <p class="small text-muted">
                    Já tem uma conta? <a href="/Account/Login" class="text-white text-decoration-none fw-bold">Fazer Login.</a>
                </p>
            </div>
        </div>
    </div>
</div>