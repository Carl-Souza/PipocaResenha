@{ 
    ViewData["Titulo"] = "Acesse sua conta";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="card bg-dark border-secondary text-white shadow-lg" style="max-width: 400px; width: 100%;">
        <div class="card-body p-5">
            
            <div class="text-center mb-4">
                <h2 class="fw-bold">Bem-vindo</h2>
                <p class="text-white-50">Faça login para continuar.</p>
            </div>

            @if (TempData["MensagemErro"] != null)
            {
                <div class="alert alert-danger border-danger bg-danger bg-opacity-10 text-danger mb-4 p-2 text-center small rounded" role="alert">
                    <i class="bi bi-exclamation-circle-fill me-1"></i> @TempData["MensagemErro"]
                </div>
            }
            
            @if (TempData["MensagemSucesso"] != null)
            {
                <div class="alert alert-success border-success bg-success bg-opacity-10 text-success mb-4 p-2 text-center small rounded" role="alert">
                    <i class="bi bi-check-circle-fill me-1"></i> @TempData["MensagemSucesso"]
                </div>
            }

            <form method="post" action="/Account/Login">
                <div class="mb-3">
                    <label class="form-label text-muted small">E-MAIL</label>
                    <input type="email" name="email" class="form-control bg-black text-white border-secondary p-3" placeholder="exemplo@email.com" required />
                </div>
                
                <div class="mb-4">
                    <label class="form-label text-muted small">SENHA</label>
                    <input type="password" name="password" class="form-control bg-black text-white border-secondary p-3" placeholder="••••••••" required />
                </div>

                <div class="d-grid gap-2">
                    <button class="btn btn-danger btn-lg fw-bold">ENTRAR</button>
                </div>
            </form>

            <div class="text-center mt-4">
                <p class="small text-muted">
                    Novo por aqui? <a href="/Account/Register" class="text-white text-decoration-none fw-bold">Crie uma conta agora.</a>
                </p>
            </div>
        </div>
    </div>
</div>