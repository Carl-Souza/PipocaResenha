@model PipocaResenha.ViewModels.HomeViewModel
@{
    ViewData["Titulo"] = "Início";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-section text-center p-5 mb-5">
    <h1 class="display-3 fw-bold ls-tight">Pipoca & Resenha</h1>
    <p class="lead text-white-50">Seu guia definitivo de cinema.</p>
    <a href="/Filmes/All" class="btn btn-danger btn-lg px-5 mt-3 rounded-pill shadow-sm">Explorar Catálogo</a>
</div>
<div class="container my-4">
    <div class="card bg-dark border-secondary text-center py-4">
        <div class="card-body">
            <span class="badge bg-warning text-dark mb-2">Publicidade</span>
            <h5 class="text-white-50">Espaço reservado para o seu anúncio</h5>
            <p class="small text-muted">Anuncie aqui e alcance milhares de cinéfilos.</p>
        </div>
    </div>
</div>
<main class="container pb-5">

    @if (Model.Lancamentos.Any())
    {
        @await Html.PartialAsync("_CarrosselFilmes", new { Titulo = "Lançamentos", Filmes = Model.Lancamentos })
    }

    @if (Model.TopBemAvaliados.Any())
    {
        @await Html.PartialAsync("_CarrosselFilmes", new { Titulo = "Em Destaque (Top Notas)", Filmes = Model.TopBemAvaliados })
    }

    @if (Model.MaisComentados.Any())
    {
        @await Html.PartialAsync("_CarrosselFilmes", new { Titulo = "Os Mais Falados", Filmes = Model.MaisComentados })
    }
</main>