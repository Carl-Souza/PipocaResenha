@{
    ViewData["Titulo"] = "Início";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="hero bg-dark text-white p-5 rounded-4 mb-4 shadow">
    <h1 class="display-4 fw-bold">Pipoca & Resenha</h1>
    <p class="lead">Descubra filmes, séries e reviews detalhados!</p>
    <a href="/Filmes/All" class="btn btn-warning btn-lg mt-3">Explorar Filmes</a>
</div>
<main class="container mt-4">
    <!-- Seção 1: Lancamentos -->
    <h2>Lançamentos</h2>
    <div class="carrossel-filmes" data-section="Lancamentos">
        <div class="seta-esquerda"><span class="seta-icone">❮</span></div>
        <div class="filme-linha">
            <div class="d-flex justify-content-center w-100 py-5"><div class="spinner-border" role="status"><span class="visually-hidden">Carregando...</span></div></div>
        </div>
        <div class="seta-direita"><span class="seta-icone">❯</span></div>
    </div>

    <!-- Seção 2: Em Destaque -->
    <h2 class="mt-5">Em Destaque</h2>
    <div class="carrossel-filmes" data-section="Destaque">
        <div class="seta-esquerda"><span class="seta-icone">❮</span></div>
        <div class="filme-linha">
            <div class="d-flex justify-content-center w-100 py-5"><div class="spinner-border" role="status"><span class="visually-hidden">Carregando...</span></div></div>
        </div>
        <div class="seta-direita"><span class="seta-icone">❯</span></div>
    </div>

    <!-- Seção 3: Mais Assistidos -->
    <h2 class="mt-5">Mais Assistidos</h2>
    <div class="carrossel-filmes" data-section="MaisAssistidos">
        <div class="seta-esquerda"><span class="seta-icone">❮</span></div>
        <div class="filme-linha">
            <div class="d-flex justify-content-center w-100 py-5"><div class="spinner-border" role="status"><span class="visually-hidden">Carregando...</span></div></div>
        </div>
        <div class="seta-direita"><span class="seta-icone">❯</span></div>
    </div>
</main>
