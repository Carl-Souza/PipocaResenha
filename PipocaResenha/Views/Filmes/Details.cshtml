@model PipocaResenha.Models.Filmes
@{
    ViewData["Titulo"] = Model.Titulo;
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    double mediaNota = Model.Reviews != null && Model.Reviews.Any() 
        ? Model.Reviews.Average(r => r.Nota) 
        : 0;

    string googleSearchLink = $"https://www.google.com/search?q=sess√µes+{System.Web.HttpUtility.UrlEncode(Model.Titulo)}";
}

<div class="container py-5">

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger border-danger bg-dark text-danger shadow alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> <strong>Ops!</strong> @TempData["MensagemErro"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success border-success bg-dark text-success shadow alert-dismissible fade show">
            <i class="bi bi-check-circle-fill me-2"></i> <strong>Sucesso!</strong> @TempData["MensagemSucesso"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-5">
        <div class="col-md-4 mb-4 mb-md-0">
            <div class="position-sticky" style="top: 100px;">
                <img src="@(string.IsNullOrEmpty(Model.PosterUrl) ? "https://placehold.co/400x600?text=Sem+Imagem" : Model.PosterUrl)" 
                     class="img-fluid rounded-3 shadow-lg w-100" alt="@Model.Titulo" 
                     onerror="this.onerror=null;this.src='https://placehold.co/400x600?text=Erro+Imagem';"/>
            </div>
        </div>

        <div class="col-md-8">
            <h1 class="display-4 fw-bold text-white">@Model.Titulo</h1>
            
            <div class="d-flex align-items-center gap-3 mb-4 text-white-50 font-monospace">
                <span>üìÖ @(Model.DataLancamento?.ToString("yyyy") ?? "N/A")</span>
                <span>‚Ä¢</span>
                <span class="badge bg-secondary border border-secondary">@Model.FaixaEtaria</span>
                <span>‚Ä¢</span>
                <span>@Model.Reviews?.Count reviews</span>
            </div>

            <a href="#section-reviews" class="text-decoration-none">
                <div class="card bg-dark border-secondary mb-4 hover-scale" style="max-width: 250px;">
                    <div class="card-body d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="text-muted mb-0 text-uppercase small">Nota da Galera</h6>
                            <div class="text-warning fs-4">@mediaNota.ToString("F1") <small class="fs-6 text-muted">/ 10</small></div>
                        </div>
                        <div class="fs-1 text-warning">‚òÖ</div>
                    </div>
                </div>
            </a>

            <div class="d-flex gap-3 mb-5">
                @if (!string.IsNullOrEmpty(Model.UrlIngreso))
                {
                    <a href="@Model.UrlIngreso" target="_blank" class="btn btn-danger btn-lg rounded-pill px-4 shadow">üéü Comprar Ingresso</a>
                }
                
                @if (User.Identity.IsAuthenticated)
                {
                    <button type="button" class="btn btn-outline-light btn-lg rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#modalAvaliar">‚úç Escrever Review</button>
                }
                else
                {
                    <a href="/Account/Login" class="btn btn-outline-secondary btn-lg rounded-pill px-4">Fa√ßa login para avaliar</a>
                }
            </div>

            <div class="mb-5">
                <h4 class="border-start border-4 border-danger ps-3 text-white mb-3">Sinopse</h4>
                <p class="lead text-white-50" style="line-height: 1.8;">@Model.Sinopse</p>
            </div>

            <div class="mb-5">
                <h4 class="border-start border-4 border-danger ps-3 text-white mb-3">Onde Assistir</h4>
                <div class="card bg-dark border-secondary">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-geo-alt-fill text-danger fs-1 mb-3"></i>
                        <h5 class="card-title text-white">Quer saber os hor√°rios perto de voc√™?</h5>
                        <p class="card-text text-muted mb-4">Encontre cinemas e sess√µes dispon√≠veis agora.</p>
                        
                        <a href="@googleSearchLink" target="_blank" class="btn btn-outline-light rounded-pill px-4">
                            üîç Clique aqui para saber onde assistir
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="section-reviews" class="row pt-5 border-top border-secondary">
        <div class="col-12">
            <h3 class="mb-4">Avalia√ß√µes dos Usu√°rios</h3>
            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    @foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedAt))
                    {
                        <div class="col">
                            <div class="card bg-dark border-secondary h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between mb-2">
                                        <h6 class="card-title text-white fw-bold">@review.Usuario?.Nome</h6>
                                        <span class="badge bg-warning text-dark">‚òÖ @review.Nota</span>
                                    </div>
                                    <p class="card-text text-white-50 small">"@review.TextoReview"</p>
                                    <small class="text-muted" style="font-size: 0.7rem;">@review.CreatedAt.ToString("dd/MM/yyyy")</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-dark text-center text-muted">Ningu√©m avaliou este filme ainda. Seja o primeiro!</div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="modalAvaliar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark border-secondary text-white">
            <div class="modal-header border-secondary">
                <h5 class="modal-title">Avaliar "@Model.Titulo"</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-controller="Reviews" asp-action="Create" method="post">
                <div class="modal-body">
                    <input type="hidden" name="codigoFilme" value="@Model.Codigo" />
                    <div class="mb-3">
                        <label class="form-label">Sua Nota</label>
                        <select name="nota" class="form-select bg-black text-white border-secondary">
                            <option value="10">10 - Obra Prima</option>
                            <option value="9">9 - Excelente</option>
                            <option value="8">8 - Muito Bom</option>
                            <option value="7">7 - Bom</option>
                            <option value="6">6 - Legal</option>
                            <option value="5">5 - Mediano</option>
                            <option value="4">4 - Ruim</option>
                            <option value="0">0 - Terr√≠vel</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Coment√°rio</label>
                        <textarea name="text" class="form-control bg-black text-white border-secondary" rows="4" required></textarea>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Publicar Review</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<style> .hover-scale:hover { transform: scale(1.02); cursor: pointer; } </style>
<script>
    $(document).ready(function() {
        setTimeout(function() { $('.alert').alert('close'); }, 5000);
    });
</script>
}